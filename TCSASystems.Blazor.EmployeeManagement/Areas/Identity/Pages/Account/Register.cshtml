@page
@model RegisterModel
@{
    <div class="h-100" style="background-color: #6095F0;">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center p-5">
                    <div class="col-4">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                            <div class="card-body">
                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <span asp-asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating" style="margin:10px">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                    </div>
                                    <div class="form-floating" style="margin:10px">Already have an account? <a href="/Identity/Account/Login">Log In</a></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
